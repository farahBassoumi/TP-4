@{
    ViewData["Title"] = "AddMovie";
}


<h1>AddMovie</h1>

@model tp.Models.Movies


<form asp-action="AddMovie" asp-controller="Movie" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <label asp-for="GenreName"></label>
        <input asp-for="GenreName" class="form-control" />
    </div>
<div class="form-group">
        <label asp-for="MoviePicture" class="control-label"></label>
        <input asp-for="MoviePicture" type="file" class="form-control" />
        <span asp-validation-for="MoviePicture" class="text-danger"></span>
    </div>
 
    <button type="submit" class="btn btn-primary">Add Movie</button>
</form>


@section Scripts{

    @{
        await Html.RenderPartialAsync("_validationScriptsPartial");
    }

}




