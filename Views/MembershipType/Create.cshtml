@model tp.Models.Membershiptype


<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    td {
        white-space: nowrap; /* Prevent text from wrapping to the next line */
        overflow: hidden;
        text-overflow: ellipsis; /* Display an ellipsis (...) to indicate text overflow */
    }

    .actions {
        width: 100px; /* Adjust the width of the Edit and Delete columns */
    }

    button {
        background-color: #4caf50; /* Green background color */
        color: white; /* White text color */
        padding: 8px 16px; /* Padding for better appearance */
        border: none; /* Remove border */
        border-radius: 4px; /* Optional: Rounded corners */
        cursor: pointer; /* Add cursor pointer on hover */
    }

        button:hover {
            background-color: #45a049; /* Darker green on hover */
        }
</style>
<h2>Create Membership Type</h2>

@using (Html.BeginForm("Create", "MembershipType", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiscountRate"></label>
        <input asp-for="DiscountRate" class="form-control" />
        <span asp-validation-for="DiscountRate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SignUpFee"></label>
        <input asp-for="SignUpFee" class="form-control" />
        <span asp-validation-for="SignUpFee" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DurationInMonth"></label>
        <input asp-for="DurationInMonth" class="form-control" />
        <span asp-validation-for="DurationInMonth" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
